version: '3.8'


services:
 
  db:
    image: mysql:8.0
    container_name: mysql-db-container
    restart: always
    environment:
     
      MYSQL_ROOT_PASSWORD: root_password_segura
      MYSQL_DATABASE: meu_banco_de_dados_docker
    ports:
      - "3306:3306"
    volumes:
     
      - db_data:/var/lib/mysql


 
  phpmyadmin:
    image: phpmyadmin/phpmyadmin
    container_name: phpmyadmin-container
    restart: always
    environment:
      PMA_HOST: db
      MYSQL_ROOT_PASSWORD: root_password_segura
    ports:
      - "8080:80"
    depends_on:
      - db


volumes:
  db_data:
